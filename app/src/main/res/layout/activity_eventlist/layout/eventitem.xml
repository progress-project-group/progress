<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/event_priority"
                    android:textColor="@color/gray"
                    android:layout_margin="5dp"
                    android:textSize="12dp"
                    />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:id="@+id/tomato1"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/tomato"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:id="@+id/tomato2"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/tomato"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:id="@+id/tomato3"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/tomato"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:id="@+id/tomato4"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/tomato"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:id="@+id/tomato5"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/tomato"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:id="@+id/tomato6"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/tomato"
                    android:visibility="invisible"/>
            </LinearLayout>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:focusable="true"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            >
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/tomato_button"
                android:id="@+id/event_tomato_button"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                />
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/delete_button"
                android:layout_margin="10dp"
                android:id="@+id/event_delete_button"
                android:layout_gravity="center"

                />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/drag_handle"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.cardview.widget.CardView>