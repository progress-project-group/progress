<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:id="@+id/type_group">
        <RadioButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/study_button"
            android:id="@+id/study_button"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:button="@null"></RadioButton>
        <RadioButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/sport_button"
            android:id="@+id/sport_button"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:button="@null"></RadioButton>
        <RadioButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/relax_button"
            android:id="@+id/relax_button"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:button="@null"></RadioButton>
        <RadioButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/other_button"
            android:id="@+id/other_button"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:checked="true"
            android:padding="10dp"
            android:button="@null"></RadioButton>
    </RadioGroup>
</LinearLayout>